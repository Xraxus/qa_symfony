{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.question_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.question_list'|trans }}</h1>

    {% if pagination.items|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.title'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for question in pagination %}
                <tr>
                    <td>{{ question.id }}</td>
                    <td>{{ question.title }}</td>
                    <td>
                        <a href="{{ path('question_show', {'id': question.id}) }}" class="btn btn-sm btn-primary">
                            {{ 'link.show'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <nav aria-label="Page navigation">
            <ul class="pagination">

                {# Poprzednia strona #}
                {% if pagination.page > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('question_list', {page: pagination.page - 1}) }}" aria-label="{{ 'pagination.previous'|trans }}">
                            &laquo; {{ 'pagination.previous'|trans }}
                        </a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">&laquo; {{ 'pagination.previous'|trans }}</span>
                    </li>
                {% endif %}

                {# Aktualna strona i total stron #}
                <li class="page-item disabled">
                    <span class="page-link">
                        {{ 'pagination.page'|trans({'%current%': pagination.page, '%total%': pagination.pageCount}) }}
                    </span>
                </li>

                {# NastÄ™pna strona #}
                {% if pagination.page < pagination.pageCount %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('question_list', {page: pagination.page + 1}) }}" aria-label="{{ 'pagination.next'|trans }}">
                            {{ 'pagination.next'|trans }} &raquo;
                        </a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">{{ 'pagination.next'|trans }} &raquo;</span>
                    </li>
                {% endif %}
            </ul>
        </nav>

    {% else %}
        <p>{{ 'message.empty_list'|trans }}</p>
    {% endif %}
{% endblock %}
