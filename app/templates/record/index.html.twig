{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.record_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.record_list'|trans }}</h1>
    {% if records is defined and records|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.title'|trans }}</th>
                <th>{{ 'label.tags'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for record in records %}
                <tr>
                    <td>{{ record.id }}</td>
                    <td>{{ record.title }}</td>
                    <td>{{ record.tags|join(', ') }}</td>
                    <td>
                        <a href="{{ url('record_view', {'id': record.id}) }}" class="btn btn-sm btn-primary">
                            {{ 'link.show'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>{{ 'message.empty_list'|trans }}</p>
    {% endif %}
{% endblock %}
